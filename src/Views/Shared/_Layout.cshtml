<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootswatch/yeti/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/styles/site.css" />
</head>

<body>
  <div id="sidebar">
    <img src="~/img/img.png" alt="profile picture" class="headshot">
    <span id="username">John Bird</span>
    <ul class="nav">
      <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
      <li><a asp-controller="App" asp-action="about">About</a></li>
      <li><a asp-controller="App" asp-action="contact">Contact</a></li>
    </ul>
  </div>

  <div id="wrapper">
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <ul class="nav navbar-nav navbar-left">
          <li>
            <button id="sidebarToggle" class="btn btn-primary">
              <i class="fa fa-angle-left"></i>
            </button>
          </li>
        </ul>
        <a asp-controller="App" asp-action="Index" class="navbar-brand">TheWorld</a>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <a href="#" class="btn btn-sm btn-info"><i class="fa fa-save"></i>&nbsp;Save</a>
          </li>
          <li>
            <a href="#" class="btn btn-sm btn-info"><i class="fa fa-print"></i>&nbsp;Print</a>
          </li>
        </ul>
      </div>
    </nav>
    <div id="main" class="container-fluid">
      <div>
        @RenderBody()
      </div>
      <div id="footer">
        <div class="navbar navbar-inverse navbar-fixed-bottom">
          <h4 class="text-info text-center">&copy; 2017. The World Ltd.</h4>
        </div>
      </div>
    </div>
  </div>

  <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
  <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="~/js/site.js"></script>
  
  @RenderSection("scripts", false)
</body>

</html>
